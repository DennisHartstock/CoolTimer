<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="sound"
        android:summaryOff="off"
        android:summaryOn="on"
        android:title="Sound" />

    <ListPreference
        android:title="Melody"
        android:key="melody"
        android:defaultValue="bell_sound"
        android:entries="@array/melodies"
        android:entryValues="@array/melody_values"/>

    <EditTextPreference
        android:title="Duration in seconds"
        android:key="duration"
        android:defaultValue="30"

        />

</PreferenceScreen>